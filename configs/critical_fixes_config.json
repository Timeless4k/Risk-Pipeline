{
  "data": {
    "start_date": "1990-01-01",
    "end_date": "2025-10-08",
    "us_assets": [
      "AAPL",
      "MSFT",
      "^GSPC"
    ],
    "au_assets": [
      "IOZ.AX",
      "CBA.AX",
      "BHP.AX"
    ],
    "cache_dir": "data_cache"
  },
  "features": {
    "volatility_window": 5,
    "ma_short": 10,
    "ma_long": 50,
    "correlation_window": 30,
    "sequence_length": 7,
    "volatility_windows": [5, 10, 20],
    "temporal_separation_days": 90
  },
  "models": {
    "lstm_units": [
      64,
      32
    ],
    "lstm_dropout": 0.3,
    "lstm_recurrent_dropout": 0.2,
    "lstm_bidirectional": true,
    "lstm_attention": true,
    "stockmixer_temporal_units": 128,
    "stockmixer_indicator_units": 128,
    "stockmixer_cross_stock_units": 128,
    "stockmixer_fusion_units": 256,
    "stockmixer_dropout": 0.4,
    "stockmixer_l2_reg": 1e-3,
    "xgboost_n_estimators": 1000,
    "xgboost_max_depth": 6,
    "xgboost_learning_rate": 0.01,
    "xgboost_subsample": 0.8,
    "xgboost_colsample_bytree": 0.8,
    "xgboost_reg_alpha": 0.1,
    "xgboost_reg_lambda": 1.0,
    "xgboost_min_child_weight": 3,
    "xgboost_gamma": 0.1
  },
  "training": {
    "walk_forward_splits": 8,
    "test_size": 126,
    "batch_size": 64,
    "epochs": 100,
    "early_stopping_patience": 20,
    "reduce_lr_patience": 10,
    "random_state": 42,
    "validation_split": 0.2
  },
  "output": {
    "results_dir": "results",
    "plots_dir": "visualizations",
    "shap_dir": "shap_plots",
    "models_dir": "models",
    "log_dir": "logs"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S"
  },
  "shap": {
    "background_samples": 100,
    "max_display": 20,
    "plot_type": "bar",
    "save_plots": true
  },
  "feature_engineering": {
    "enable_feature_selection": true,
    "feature_selection_method": "mutual_info",
    "feature_selection_k": 30,
    "enable_feature_importance": true,
    "importance_methods": [
      "shap",
      "permutation",
      "tree"
    ],
    "cv_method": "time_series_split",
    "cv_folds": 5,
    "enable_interpretability": true,
    "interpretability_methods": [
      "shap",
      "lime",
      "permutation"
    ],
    "enable_risk_metrics": true,
    "risk_metrics": [
      "var",
      "cvar",
      "sharpe",
      "sortino",
      "calmar"
    ],
    "confidence_level": 0.95,
    "temporal_separation": {
      "feature_shift_days": 95,
      "target_shift_days": 90,
      "min_correlation_threshold": 0.3
    }
  },
  "model_optimization": {
    "enable_hyperparameter_tuning": true,
    "tuning_backend": "optuna",
    "optuna_n_trials": 100,
    "optuna_timeout": 1800,
    "optuna_pruner": "median",
    "lstm_search_space": {
      "units": [32, 64, 128],
      "layers": [2, 3],
      "dropout": [0.2, 0.3, 0.4],
      "learning_rate": [0.001, 0.01]
    },
    "stockmixer_search_space": {
      "temporal_units": [64, 128, 256],
      "indicator_units": [64, 128, 256],
      "cross_stock_units": [64, 128, 256],
      "fusion_units": [128, 256, 512],
      "dropout": [0.3, 0.4, 0.5]
    },
    "xgboost_search_space": {
      "n_estimators": [500, 1000, 1500],
      "max_depth": [4, 6, 8],
      "learning_rate": [0.01, 0.05, 0.1],
      "subsample": [0.7, 0.8, 0.9],
      "colsample_bytree": [0.7, 0.8, 0.9]
    }
  },
  "data_quality": {
    "enable_input_validation": true,
    "max_feature_value": 100,
    "max_target_value": 10,
    "enable_extreme_value_clipping": true,
    "enable_nan_detection": true,
    "enable_inf_detection": true,
    "asset_specific_normalization": true,
    "normalization_method": "standard",
    "train_split_ratio": 0.7
  },
  "ensemble": {
    "enable_ensemble": true,
    "ensemble_methods": [
      "voting",
      "stacking"
    ],
    "ensemble_weights": [
      0.4,
      0.6
    ],
    "voting_estimators": [
      "lstm",
      "xgboost",
      "stockmixer"
    ],
    "voting_method": "soft",
    "stacking_cv_folds": 5,
    "stacking_meta_learner": "xgboost"
  }
}
