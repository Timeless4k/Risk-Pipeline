{
  "data": {
    "start_date": "1990-01-01",
    "end_date": "2025-10-08",
    "us_assets": [
      "AAPL",
      "MSFT",
      "^GSPC"
    ],
    "au_assets": [
      "IOZ.AX",
      "CBA.AX",
      "BHP.AX"
    ],
    "cache_dir": "data_cache"
  },
  "features": {
    "volatility_window": 5,
    "ma_short": 10,
    "ma_long": 50,
    "correlation_window": 30,
    "sequence_length": 7
  },
  "models": {
    "lstm_units": [
      64,
      32
    ],
    "lstm_dropout": 0.3,
    "stockmixer_temporal_units": 128,
    "stockmixer_indicator_units": 128,
    "stockmixer_cross_stock_units": 128,
    "stockmixer_fusion_units": 256,
    "xgboost_n_estimators": 1000,
    "xgboost_max_depth": 6
  },
  "training": {
    "walk_forward_splits": 8,
    "test_size": 252,
    "batch_size": 32,
    "epochs": 100,
    "early_stopping_patience": 20,
    "reduce_lr_patience": 10,
    "random_state": 42
  },
  "output": {
    "results_dir": "results",
    "plots_dir": "visualizations",
    "shap_dir": "shap_plots",
    "models_dir": "models",
    "log_dir": "logs"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "date_format": "%Y-%m-%d %H:%M:%S"
  },
  "shap": {
    "background_samples": 50,
    "max_display": 20,
    "plot_type": "bar",
    "save_plots": true
  },
  "hyperparameter_tuning": {
    "enable_tuning": true,
    "tuning_backend": "optuna",
    "optuna_n_trials": 200,
    "optuna_timeout": 3600,
    "optuna_pruner": "median",
    "ray_tune_num_samples": 200,
    "ray_tune_time_budget_s": 3600,
    "ray_tune_scheduler": "asha",
    "lstm_search_space": {
      "units": [
        64,
        128,
        256,
        512
      ],
      "layers": [
        2,
        3,
        4,
        5
      ],
      "dropout": [
        0.1,
        0.2,
        0.3,
        0.4
      ],
      "learning_rate": [
        0.001,
        0.01,
        0.1
      ],
      "batch_size": [
        32,
        64,
        128,
        256
      ]
    },
    "stockmixer_search_space": {
      "temporal_units": [
        128,
        256,
        512
      ],
      "indicator_units": [
        128,
        256,
        512
      ],
      "cross_stock_units": [
        128,
        256,
        512
      ],
      "fusion_units": [
        256,
        512,
        1024
      ],
      "num_layers": [
        4,
        6,
        8
      ],
      "attention_heads": [
        4,
        8,
        16
      ]
    },
    "xgboost_search_space": {
      "n_estimators": [
        200,
        500,
        1000
      ],
      "max_depth": [
        6,
        8,
        10,
        12
      ],
      "learning_rate": [
        0.01,
        0.05,
        0.1
      ],
      "subsample": [
        0.7,
        0.8,
        0.9
      ],
      "colsample_bytree": [
        0.7,
        0.8,
        0.9
      ],
      "reg_alpha": [
        0,
        0.1,
        1.0
      ],
      "reg_lambda": [
        0.1,
        1.0,
        10.0
      ]
    }
  },
  "ensemble": {
    "enable_ensemble": true,
    "ensemble_methods": [
      "voting",
      "stacking",
      "blending"
    ],
    "ensemble_weights": [
      0.3,
      0.4,
      0.3
    ],
    "voting_estimators": [
      "lstm",
      "stockmixer",
      "xgboost",
      "arima",
      "enhanced_arima"
    ],
    "voting_method": "soft",
    "stacking_cv_folds": 5,
    "stacking_meta_learner": "xgboost",
    "blending_holdout_size": 0.2,
    "blending_meta_learner": "xgboost"
  },
  "advanced_features": {
    "enable_feature_selection": true,
    "feature_selection_method": "mutual_info",
    "feature_selection_k": 50,
    "enable_feature_importance": true,
    "importance_methods": [
      "shap",
      "permutation",
      "tree"
    ],
    "cv_method": "time_series_split",
    "cv_folds": 5,
    "enable_interpretability": true,
    "interpretability_methods": [
      "shap",
      "lime",
      "permutation"
    ],
    "enable_risk_metrics": true,
    "risk_metrics": [
      "var",
      "cvar",
      "sharpe",
      "sortino",
      "calmar"
    ],
    "confidence_level": 0.95
  }
}